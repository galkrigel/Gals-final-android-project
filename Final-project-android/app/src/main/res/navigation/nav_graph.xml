<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/apiPropertiesFragment">
    <fragment
        android:id="@+id/propertiesFragment"
        android:name="com.example.final_project_android.fragments.PropertiesFragment"
        android:label="Properties For sale (from db)"
        tools:layout="@layout/fragment_properties">
        <action
            android:id="@+id/action_propertiesFragment_to_propertyScreenFragment"
            app:destination="@id/fragment_property_screen" />
    </fragment>
    <fragment
        android:id="@+id/apiPropertiesFragment"
        android:name="com.example.final_project_android.fragments.ApiPropertiesFragment"
        android:label="Sold properties (from api)"
        tools:layout="@layout/fragment_api_properties"></fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.final_project_android.fragments.ProfileFragment"
        android:label="User profile"
        tools:layout="@layout/fragment_profile">
    </fragment>
    <fragment
        android:id="@+id/userProperties"
        android:name="com.example.final_project_android.fragments.UserPropertiesFragment"
        android:label="User properties"
        tools:layout="@layout/fragment_properties">
        <action
            android:id="@+id/action_propertiesFragment_to_propertyScreenFragment"
            app:destination="@id/fragment_property_screen" />
    </fragment>
    <fragment
        android:id="@+id/fragment_property_screen"
        android:name="com.example.final_project_android.fragments.PropertyScreenFragment"
        android:label="Property screen Fragment"
        tools:layout="@layout/fragment_property_screen">
        <argument
            android:name="propertyId"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="country"
            app:argType="string" />
        <argument
            android:name="city"
            app:argType="string" />
        <argument
            android:name="price"
            app:argType="string" />
        <argument
            android:name="area"
            app:argType="string" />
        <argument
            android:name="ownerId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/addPropertyFragment"
        android:name="com.example.final_project_android.fragments.AddPropertyFragment"
        android:label="Add Property"
        tools:layout="@layout/fragment_add_property" >
<!--        <argument-->
<!--            android:name="propertyId"-->
<!--            app:argType="string?"-->
<!--        />-->
    </fragment>
    <action
        android:id="@+id/action_global_addPropertyFragment"
        app:destination="@id/addPropertyFragment" />
</navigation>